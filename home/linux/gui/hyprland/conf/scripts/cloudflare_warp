#!/usr/bin/env bash

if [ "$1" == "status" ];
then
    if [[ $(pidof warp-svc) ]];
  then
    echo "{\"text\":\"ğŸŒ\", \"tooltip\":\"cloudflare_warp/warp-svc isStarted\"}"
  else
    echo "{\"text\":\"ğŸ”“\", \"tooltip\":\"cloudflare_warp/warp-svc isStopped\"}"
  fi
elif [ "$1" == "toggle" ];
then
  if [[ $(pidof warp-svc) ]];
  then
    pkill warp-svc &
  else
    warp-svc &
  fi
else
  echo "usage:
  - cloudflare_warp status
  - cloudflare_warp toggle"
fi
