{
  "position": "top",
  "layer": "top",
  "modules-left": [
    "custom/launcher",
    "custom/recording",
    "custom/showkey",
    "custom/cloudflare_warp",
    // "temperature",
    "backlight",
    "niri/workspaces",
  ],
  "modules-center": ["custom/playerctl"],
  "modules-right": [
    "mpd",
    "bluetooth",
    "pulseaudio",
    "battery",
    "memory",
    "cpu",
    "network",
    "clock",
    "idle_inhibitor",
    "custom/powermenu",
    "tray",
  ],
  "niri/workspaces": {
	  "format": "{icon}",
	  "format-icons": {
		  // Named workspaces
		  // (you need to configure them in niri)
		  // "browser": "î€‡",
		  // "discord": "ï’",
		  // "chat": "<b>ïµ</b>",
		  // Icons by state
		  "active": "ï†’",
		  "default": "ï„‘"
	  }
  },
  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "ï€— {:%H:%M}",
    "format-alt": "ï³ {:%a %b %d, %G}",
    "on-double-click": "kitty calcurse",
    "on-click-right": "gnome-clocks",
  },
  "cpu": {
    "format": "\udb80\udf5b {usage}%",
    "interval": 1,
    "on-click-middle": "foot btop",
    "on-click-right": "foot btop",
  },
  "custom/launcher": {
    "format": "\uf313 ",
    "on-click": "$HOME/.config/niri/scripts/menu",
    "on-click-middle": "exec default_wall",
    "on-click-right": "exec wallpaper_random",
    "tooltip": false,
  },
  "custom/recording": {
    "exec": "$HOME/.config/niri/scripts/recording status",
    "format": "{}",
    "on-click": "$HOME/.config/niri/scripts/recording toggle fullscreen",
    "on-click-right": "$HOME/.config/niri/scripts/recording toggle region",
    "restart-interval": 1,
    "return-type": "json",
    "tooltip": true,
  },
  "custom/showkey": {
    "exec": "$HOME/.config/niri/scripts/showkey status",
    "format": "{}",
    "on-click": "$HOME/.config/niri/scripts/showkey toggle",
    "restart-interval": 1,
    "return-type": "json",
    "tooltip": true,
  },
  "custom/cloudflare_warp": {
    "exec": "$HOME/.config/niri/scripts/cloudflare_warp status",
    "format": "{}",
    "on-click": "$HOME/.config/niri/scripts/cloudflare_warp toggle",
    "restart-interval": 1,
    "return-type": "json",
    "tooltip": true,
  },
  "bluetooth": {
    "format-on": "ïŠ“",
    "format-off": "ï–±",
    "format-disabled": "",
    "format-connected": "<b>ïŠ” {num_connections}</b>",
    "format-connected-battery": "ïŠ” {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueman-manager",
    // "on-click": "rofi-bluetooth -config ~/.config/rofi/menu.d/network.rasi -i"
  },
  "mpris": {
    "title-len": 20,
    "interval": 1,
    "album-len": 0,
    "max-len": 40,
    "format": "{player_icon} {title} - {artist}",
    "format-paused": "{player_icon} {title} - {artist}",
    //"format-paused": "{player_icon} {dynamic}",
    "truncate-hours": true,
    "player-icons": {
      "default": "â–¶",
      "mpv": "ğŸµ",
      "spotify": "ï†¼",
      "firefox": "ï‰©",
    },
    "status-icons": {
      "paused": "î«‘",
    },
    "ignored-players": ["vlc", "firefox"],
  },
  "custom/powermenu": {
    "format": "\uf011",
    "on-click": "$HOME/.config/niri/scripts/wlogout",
    "tooltip": false,
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "\uf06e",
      "deactivated": "\uf070",
    },
    "tooltip": false,
  },
  "memory": {
    "format": "\udb83\udee0 {percentage}%",
    "interval": 1,
    "states": {
      "warning": 85,
    },
    "on-click-middle": "kitty btop",
    "on-click-right": "kitty btop",
  },
  "mpd": {
    "interval": 2,
    "unknown-tag": "N/A",
    "format": "{stateIcon} {artist} - {title}",
    "format-disconnected": "ï¢‰ Disconnected",
    "format-paused": "{stateIcon} {artist} - {title}",
    "format-stopped": "ïŠ",
    "state-icons": {
      "paused": "ï…„",
      "playing": "ïŠ‹",
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
    // Commands to execute on events
    "on-click": "mpc toggle",
    "on-click-middle": "mpc prev",
    "on-click-right": "mpc next",
    "on-update": "",
    "on-scroll-up": "mpc seek +00:00:01",
    "on-scroll-down": "mpc seek -00:00:01",
    "smooth-scrolling-threshold": 1,
  },
  "custom/playerctl": {
    "format": "{icon}  <span>{}</span>",
    "return-type": "json",
    "max-length": 55,
    "exec": "playerctl -a metadata --format '{\"text\": \"  {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click-middle": "playerctl previous",
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "format-icons": {
      "Paused": "<span foreground='#6dd9d9'>ï‹</span>",
      "Playing": "<span foreground='#82db97'>ïŒ</span>",
    },
  },
  "network": {
    "interval": 5,
    //"interface": "wlan*", // (Optional) To force the use of this interface, set it for netspeed to work
    "format-wifi": "ï‡« ",
    "format-ethernet": "ï›¿ ",
    "format-linked": "ï›¿ ",
    "format-disconnected": "<span font-family='Font Awesome'>ïª©</span>",
    "format-disabled": "<span font-family='Font Awesome'>ïª©</span>",
    "format-alt": "ïƒ˜ {bandwidthUpBytes} | ïƒ— {bandwidthDownBytes}",
    "tooltip-format": "ï”‚ {ifname} via {gwaddr}",
    "tooltip-format-wifi": "ï‡« {essid} ({ifname} via {gwaddr})",
    "tooltip-format-ethernet": "ï›¿ {ipaddr}/{cidr} ({ifname} via {gwaddr})",
    "tooltip-format-linked": "ï›¿ {ifname} (No IP) ({ifname} via {gwaddr})",
    "tooltip-format-disconnected": "<span font-family='Font Awesome'>ïª©</span> Disconnected",
    "tooltip-format-disabled": "<span font-family='Font Awesome'>ïª©</span>",
    "on-click-middle": "nm-connection-editor",
    "on-click-right": "foot nmtui",
  },
  "pulseaudio": {
    //"format": "{volume}% {icon} {format_source}",
    "format": "{icon}  {volume}%",
    "format-muted": "ï‘¦ Mute",
    "format-bluetooth": "ïŠ“ {volume}% {format_source}",
    "format-bluetooth-muted": "ïŠ“ Mute",
    "format-source": "ï„° {volume}%",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ïŸ",
      "headset": "ïŸ",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": ["ï€¦", "ï€§", "ï€¨"],
    },
    "scroll-step": 5.0,
    // Commands to execute on events
    "on-click-right": "amixer set Master toggle",
    "on-click": "pavucontrol",
    "smooth-scrolling-threshold": 1,
  },
  "temperature": {
    "format": "\uf2c9 {temperatureC}\u00b0C",
    "tooltip": false,
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"],
  },
  "tray": {
    "icon-size": 15,
    "spacing": 5,
  },
  "battery": {
    "bat": "BAT0",
    "adapter": "ADP0",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "max-length": 20,
    "format": "{icon} {capacity}%",
    "format-warning": "{icon} {capacity}%",
    "format-critical": "{icon} {capacity}%",
    "format-charging": "<span font-family='Font Awesome 6 Free'>ïƒ§</span> {capacity}%",
    "format-plugged": "ï‡¦ {capacity}%",
    "format-alt": "{icon} {time}",
    "format-full": "ï‡¦ {capacity}%",
    "format-icons": ["ï‰„ ", "ï‰ƒ ", "ï‰‚ ", "ï‰ ", "ï‰€ "],
  },
}
