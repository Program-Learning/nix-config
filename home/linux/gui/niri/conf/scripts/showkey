#!/usr/bin/env bash

if [ "$1" == "status" ];
then
    if [[ $(pidof wshowkeys) ]];
  then
    echo "{\"text\":\"üì†\", \"tooltip\":\"wshowkeys is Started\"}"
  else
    echo "{\"text\":\"‚å®Ô∏è\", \"tooltip\":\"wshowkeys is Stopped\"}"
  fi
elif [ "$1" == "toggle" ];
then
  if [[ $(pidof wshowkeys) ]];
  then
    pkill wshowkeys &
  else
    wshowkeys -t 100000000 -a right -a top &
  fi
else
  echo "usage:
  - showkey status
  - showkey toggle"
fi
